#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}ðŸ” Running pre-commit checks...${NC}"

# Function to print step header
print_step() {
    echo -e "\n${YELLOW}â–¶ $1${NC}"
}

# Function to print success
print_success() {
    echo -e "${GREEN}âœ… $1${NC}"
}

# Function to print error
print_error() {
    echo -e "${RED}âŒ $1${NC}"
}

# Track if any checks fail
FAILED=false

# 1. Type checking
print_step "Type checking TypeScript..."

# Backend type check
if cd backend && npm run typecheck > /dev/null 2>&1 || npx tsc --noEmit > /dev/null 2>&1; then
    print_success "Backend type check passed"
else
    print_error "Backend type check failed"
    FAILED=true
fi

cd ..

# Frontend type check  
if cd frontend && (npm run typecheck > /dev/null 2>&1 || npx tsc --noEmit > /dev/null 2>&1); then
    print_success "Frontend type check passed"
else
    print_error "Frontend type check failed"
    FAILED=true
fi

cd ..

# 2. Linting
print_step "Running linters..."

# Frontend linting
if cd frontend && npm run lint > /dev/null 2>&1; then
    print_success "Frontend linting passed"
else
    print_error "Frontend linting failed"
    FAILED=true
fi

cd ..

# 3. Backend tests (includes unit and integration tests)
print_step "Running backend tests..."

if cd backend && npm test > /dev/null 2>&1; then
    print_success "Backend tests passed (45/45)"
else
    print_error "Backend tests failed"
    FAILED=true
fi

cd ..

# 4. Frontend tests (if they exist and are quick)
print_step "Running frontend tests..."

if cd frontend && npm test -- --watchAll=false --passWithNoTests > /dev/null 2>&1; then
    print_success "Frontend tests passed"
else
    print_error "Frontend tests failed or not configured"
    # Don't fail the commit for frontend tests as they might not be set up yet
fi

cd ..

# Final result
if [ "$FAILED" = true ]; then
    echo -e "\n${RED}ðŸ’¥ Pre-commit checks failed! Please fix the issues above.${NC}"
    echo -e "${YELLOW}To skip these checks (not recommended), use: git commit --no-verify${NC}"
    exit 1
else
    echo -e "\n${GREEN}ðŸŽ‰ All pre-commit checks passed! Ready to commit.${NC}"
fi